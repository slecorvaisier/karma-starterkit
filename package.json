{
  "name": "karma-boilerplate",
  "version": "1.0.0",
  "description": "Simple nodejs boilerplate for unit test with Karma",
  "author": "Steven Le Corvaisier",
  "license": "MIT",
  "scripts": {
    "start:dev": "NODE_ENV=development node src/server.js",
    "start:prod": "NODE_ENV=production node src/server.js",
    "test": "./node_modules/karma/bin/karma start karma.conf.js",
    "test:mocha": "./node_modules/mocha/bin/mocha src --recursive --watch"
  },
  "dependencies": {
    "body-parser": "^1.15.1",
    "express": "^4.14.0"
  },
  "devDependencies": {
    "babel-core": "^6.14.0",
    "babel-plugin-rewire": "^1.0.0-rc-6",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.14.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "browserify-istanbul": "^2.0.0",
    "browserify-shim": "^3.8.12",
    "chai": "^3.5.0",
    "eslint": "^3.3.1",
    "eslint-config-airbnb": "^10.0.1",
    "eslint-config-airbnb-base": "^5.0.3",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-import": "^1.14.0",
    "eslint-plugin-jsx-a11y": "^2.1.0",
    "eslint-plugin-react": "^6.1.2",
    "istanbul": "^0.4.5",
    "karma": "^1.2.0",
    "karma-browserify": "^5.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.1.1",
    "karma-mocha-reporter": "^2.1.0",
    "karma-phantomjs-launcher": "^1.0.1",
    "karma-sinon-chai": "^1.2.3",
    "mocha": "^2.5.3",
    "sinon": "^1.17.5",
    "sinon-chai": "^2.8.0",
    "watchify": "^3.7.0"
  }
}
